# Run auto echos
function run { echo -e "[$@]"; $@; }

function apt_install {
  echo -n "Install $1 (with apt-get): "

  (run dpkg --get-selections | grep "^$1\s" > /dev/null) && (echo "Already Installed") || (run sudo apt-get install $1)
}

